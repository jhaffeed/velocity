<!-- Flickity -->
<link rel="stylesheet" href="/path/to/flickity.css" media="screen">
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>

<!-- Flickity Custom Styles -->
<style>

  .carousel-cell {
    min-width: 300px;
    width: 60vw;
    max-width: 65vw;
    margin: 40px 20px;
    padding: 20px 40px;
  }

    /* Start Flickity viewport safeguards */
    main {
    max-width: 100%;
    overflow-x: hidden;
  }
  .flickity-viewport { min-height: fit-content ; }
  .main-carousel, .flickity-viewport { max-width: 100vw !important; margin: 0 auto; }
  /* End Flickity viewport safeguards */

  </style>


<div class="mt-16 pt-16 mb-8">
